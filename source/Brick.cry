GRAVITY = -.01;

class Brick {
	constructor() {
		this.x = 0.001;
		this.y = 5.0;
		this.z = 5.0;
		this.vx = .3 * .1 * get_variance_ratio(.2);
		this.vy = .3 * (get_variance_ratio(.2) - 1);
		this.vz = .5 * get_variance_ratio(.1);
		
		this.dead = false;
	}
	
	function update(fluid) {
		old_x = this.x;
		old_y = this.y;
		old_z = this.z;
		
		this.x += this.vx;
		this.y += this.vy;
		this.z += this.vz;
		
		this.vz += GRAVITY;
	}
}
